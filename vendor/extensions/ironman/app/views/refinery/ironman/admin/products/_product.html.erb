<tr class='record <%= cycle("on", "on-hover") %> <%= 'draft' if product.draft? %>' id="<%= dom_id(product) -%>">
  <td class="image">
    <%= image_tag 'refinery/icons/img.png' if product.images.present? %>
  </td>
  <td class="col title">
    <% if product.featured? %>
      <span class="featured">*</span>
    <% end %>
    <%= product.product_no %>
  </td>
  <td class="col">
    <%= product.title %>
  </td>
  <td class="col">
    <% c = product.categories.first %>
    <%= c.name if c.present? %>
  </td>
  <td class="col">
    <%= number_to_currency product.price %>
  </td>
  <td class="actions">
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.ironman_product_path(product),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_ironman_admin_product_path(product),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.ironman_admin_product_path(product),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => product.product_no)},
        :method => :delete %>
  </td>
</tr>
