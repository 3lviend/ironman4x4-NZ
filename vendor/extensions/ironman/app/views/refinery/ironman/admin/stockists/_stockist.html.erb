<tr class='record <%= cycle("on", "on-hover") %> <%= 'draft' if not stockist.visible? %>' id="<%= dom_id(stockist) -%>">
  <td>
    <% if stockist.show_on_contact? %>
      <span class="contact" title="Appears on contact page">*</span>
    <% end %>
  </td>
  <td class='col title'>
    <%= raw "#{stockist.warehouse_name}<br />" if stockist.warehouse_name.present? %>
    <%= stockist.name %>
  </td>
  <td class='col'>
    <%= stockist.store_type %>
  </td>
  <td class='col'>
    <%= raw "#{stockist.region}<br />" if stockist.region.present? %>
    <%= stockist.country %>
  </td>
  <td class='col'>
    <%= stockist.postcode %>
  </td>
  <td class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.ironman_stockist_path(stockist),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_ironman_admin_stockist_path(stockist),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.ironman_admin_stockist_path(stockist),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => stockist.name)},
        :method => :delete %>
  </td>
</tr>
