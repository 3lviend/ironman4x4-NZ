<%= form_for [refinery, :ironman_admin, @order] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @order,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :order_no -%>
    <%= f.text_field :order_no, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :stockist_id -%>
    <%= f.number_field :stockist_id -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1 -%>
  </div>

  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2 -%>
  </div>

  <div class='field'>
    <%= f.label :suburb -%>
    <%= f.text_field :suburb -%>
  </div>

  <div class='field'>
    <%= f.label :postcode -%>
    <%= f.text_field :postcode -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :enquiry_type -%>
    <%= f.text_field :enquiry_type -%>
  </div>

  <div class='field'>
    <%= f.label :vehicle_id -%>
    <%= f.number_field :vehicle_id -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:comments],
                :object => "ironman/order" -%>
  </div>

  <div class='field'>
    <%= f.label :spam -%>
    <%= f.check_box :spam, :checked => @order[:spam] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.orders.admin.orders.order'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @order.order_no) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
