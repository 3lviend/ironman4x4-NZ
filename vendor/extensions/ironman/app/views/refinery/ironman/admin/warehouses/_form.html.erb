<%= form_for [refinery, :ironman_admin, @warehouse] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @warehouse,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>

  <div class='field'>
    <%= f.label :suburb -%>
    <%= f.text_field :suburb -%>
  </div>

  <div class='field'>
    <%= f.label :postcode -%>
    <%= f.text_field :postcode -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax -%>
  </div>

  <div class='field'>
    <%= f.label :latitude -%>
    <%= f.text_field :latitude -%>
  </div>

  <div class='field'>
    <%= f.label :longitude -%>
    <%= f.text_field :longitude -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.warehouses.admin.warehouses.warehouse'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @warehouse.name) -%>
<% end -%>
