<ul>
  <% if ::Refinery::Ironman::Admin::OrdersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.ironman_admin_orders_path %>
    </li>
  <% end %>
<% if !searching? && ::Refinery::Ironman::Admin::OrdersController.sortable? && ::Refinery::Ironman::Order.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Orders"),
                 refinery.ironman_admin_orders_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Orders"),
                 refinery.ironman_admin_orders_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
