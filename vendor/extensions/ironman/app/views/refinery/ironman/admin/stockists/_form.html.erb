<%= form_for [refinery, :ironman_admin, @stockist] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @stockist,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :store_type -%>
    <%= f.text_field :store_type -%>
  </div>

  <div class='field'>
    <%= f.label :warehouse_name -%>
    <%= f.text_field :warehouse_name, :class => 'widest', :placeholder => '(only applicable to warehouses)' -%>
  </div>

  <div class='field'>
    <%= f.label :services -%>
    <%= f.text_field :services -%>
  </div>

  <div class='field'>
    <%= f.label :notes -%>
    <%= f.text_field :notes, :class => 'widest' -%>
  </div>

  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1 -%>
  </div>

  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2 -%>
  </div>

  <div class='field'>
    <%= f.label :suburb -%>
    <%= f.text_field :suburb -%>
  </div>

  <div class='field'>
    <%= f.label :postcode -%>
    <%= f.text_field :postcode -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region -%>
  </div>

  <div class='field'>
    <%= f.label :contact -%>
    <%= f.text_field :contact -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax -%>
  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :facebook_page -%>
    <%= f.text_field :facebook_page -%>
  </div>

  <div class='field'>
    <%= f.label :latitude -%>
    <%= f.number_field :latitude, :step => 'any' -%>
  </div>

  <div class='field'>
    <%= f.label :longitude -%>
    <%= f.number_field :longitude, :step => 'any' -%>
  </div>

  <div class="field">
    <%= f.label :logo_image %>
    <%= render :partial => "/refinery/admin/image_picker", :locals => {
      :f => f,
      :field => :logo_image_id,
      :image => f.object.logo_image,
      :toggle_image_display => false
    }
    %>
  </div>

  <div class='field'>
    <%= f.label :map_pin -%>
    <%= f.select :map_pin, Refinery::Ironman::Stockist::MAP_PINS -%>
  </div>

  <div class='field'>
    <%= f.label :show_on_contact -%>
    <%= f.check_box :show_on_contact, :checked => @stockist[:show_on_contact] -%>
  </div>

  <div class='field'>
    <%= f.label :visible -%>
    <%= f.check_box :visible, :checked => @stockist[:visible] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.stockists.admin.stockists.stockist'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @stockist.name) -%>
<% end -%>
