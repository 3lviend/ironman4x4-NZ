<%= form_for [refinery, :ironman_admin, @subdomain] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @subdomain,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :db_name -%>
    <%= f.text_field :db_name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :company_name -%>
    <%= f.text_field :company_name -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.subdomains.admin.subdomains.subdomain'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @subdomain.db_name) -%>
<% end -%>
