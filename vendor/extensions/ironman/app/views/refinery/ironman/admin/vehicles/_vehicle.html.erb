<li class='clearfix record <%= 'draft' if not vehicle.visible? %>' id="<%= dom_id(vehicle) -%>">
  <div class="item">
    <span class='title'>
      <%= vehicle.name %>
      <span class='product-count'>(<%= link_to vehicle.products.size, refinery.ironman_admin_products_path(:vehicle_id => vehicle.id) %>)</span>
    </span>
    <span class='actions'>
      
      <%= link_to refinery_icon_tag("application_go.png"), refinery.ironman_vehicle_path(vehicle),
          :title => t('.view_live_html'),
          :target => "_blank" %>
      
      <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_ironman_admin_vehicle_path(vehicle),
           :title => t('.edit') %>
      <%= link_to refinery_icon_tag("delete.png"), refinery.ironman_admin_vehicle_path(vehicle),
          :class => "cancel confirm-delete",
          :title => t('.delete'),
          :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => vehicle.name)},
          :method => :delete %>
    </span>
  </div>

  <% if not vehicle.leaf? %>
  <ul class="nested">
  <%= render :partial => 'vehicle', :collection => vehicle.children.active %>
  </ul>
  <% end %>
</li>
