<% content_for :body_content_title do %>
  <%= @media_release.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @media_release.title %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @media_release.category %>
    </p>
  </section>
  <section>
    <h1>Publication</h1>
    <p>
      <%=raw @media_release.publication %>
    </p>
  </section>
  <section>
    <h1>Published At</h1>
    <p>
      <%=raw @media_release.published_at %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @media_release.description %>
    </p>
  </section>
  <section>
    <h1>Priced Resource</h1>
    <p>
      <%=raw @media_release.priced_resource_id %>
    </p>
  </section>
  <section>
    <h1>Unpriced Resource</h1>
    <p>
      <%=raw @media_release.unpriced_resource_id %>
    </p>
  </section>
  <section>
    <h1>Thumbnail Image</h1>
    <p>
      <%=raw @media_release.thumbnail_image_id %>
    </p>
  </section>
  <section>
    <h1>Posted At</h1>
    <p>
      <%=raw @media_release.posted_at %>
    </p>
  </section>
  <section>
    <h1>Draft</h1>
    <p>
      <%=raw @media_release.draft %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="media_releases">
      <% @media_releases.each do |media_release| %>
        <li>
          <%= link_to media_release.title, refinery.ironman_media_release_path(media_release) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
