<% url = refinery.ironman_stockists_path if local_assigns[:url].nil? %>
<div id="stockists-filters">
  <%= render :partial => 'refinery/ironman/stockists/search_form', :locals => {:url => url} %>
  <% options = options_for_select(Refinery::Ironman::Stockist.active.collect {|r| r.store_type }.uniq.reject(&:blank?), params[:store_type]) %>
  <% if options.present? %>
  <%= styled_select_tag :store_type, options, :prompt => t('.prompts.store_type'), :class => 'form-control input-sm' %>
  <% end %>

  <% options = options_for_select(Refinery::Ironman::Stockist.active.collect {|r| r.notes }.uniq.reject(&:blank?), params[:services]) %>
  <% if options.present? %>
  <%= styled_select_tag :services, options, :prompt => t('.prompts.notes'), :class => 'form-control input-sm' %>
  <% end %>
</div>
<hr />
