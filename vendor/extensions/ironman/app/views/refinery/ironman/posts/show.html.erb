<% @slideshow_images = [@post.hero_image] if @post.hero_image.present? %>
<% breadcrumb :post, @post %>

<% content_for :body_content_title do %>
  <%= @post.title %>
<% end %>

<% content_for :body do %>
  <div id="post">
    <div class="body">
    <%=raw @post.body %>
    </div>

    <div class="posted-by">
      <%= t('.posted_at', author:@post.author.username, published_at: (d @post.published_at.to_date)) %>
    </div>
  </div>
<% end %>

<% content_for :side_body do %>
  <% related_posts = @posts.where('refinery_ironman_posts.id != ?', @post.id).first(3) %>
  <% if related_posts.present? %>
  <hr class="double" />
  <aside id="related-posts">
    <h4><%= t('.other') %></h4>
    <ul class="clearfix">
      <% related_posts.first(5).each do |post| %>
        <li class="post-container col-sm-4">
          <div class="post">
            <% if post.instance_of?(Refinery::Ironman::Event) %>
            <%= render 'event_box', post:post %>
            <% else %>
              <div class="photo"><!--
                --><%= if post.index_image.present? then image_tag post.index_image.thumbnail(geometry: "365x260").url else image_tag 'post_list_photo_default.jpg' end %><!--
              --></div>
            <% end %>
            <div class="content">
              <h4><%= post.title %></h4>
              <%
                case post.type
                  when 'Refinery::Ironman::BlogPost'
                    button_text = t('.buttons.view_blog_post')
                  when 'Refinery::Ironman::NewsItem'
                    button_text = t('.buttons.view_news_item')
                  when 'Refinery::Ironman::Event'
                    button_text = t('.buttons.view_event')
                end
              %>
              <%= link_to button_text, refinery.ironman_post_path(post), class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </aside>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
