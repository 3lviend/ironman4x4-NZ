<% @slideshow_images = [@post.hero_image] if @post.hero_image.present? %>
<% breadcrumb :post, @post %>

<% content_for :body do %>
  <div id="post">
    <div class="body">
    <%=raw @post.body %>
    </div>

    <div class="posted-by">
      <%= t('.posted_at', published_at: (d @post.published_at.to_date)) %>
    </div>
  </div>
<% end %>

<% content_for :side_body do %>
  <%= render 'related_posts' %>
<% end %>

<%= render '/refinery/content_page' %>
