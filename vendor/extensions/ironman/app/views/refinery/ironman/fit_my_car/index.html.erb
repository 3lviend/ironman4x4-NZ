<% @layout_homepage_categories = true %>
<% @layout_fit_my_4x4 = false %>
<% breadcrumb :fit_my_4x4 %>

<% content_for :body do %>
  <div id="fit-my-4x4">
    <div class="row">
      <div class="hidden-xs col-sm-3 col-lg-2">
        <%= image_tag 'logo_fit_my_4x4_large.png' %>
      </div>
      <div class="col-sm-9 col-lg-10">
        <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) if Refinery::Pages.default_parts.any? and @page.present? %>
      </div>
    </div>
    <div class="hidden-xs col-sm-3 col-lg-2"></div>
    <div class="col-sm-9 col-lg-10 plf0">
    <%= form_tag refinery.ironman_fit_my_4x4_results_path, class:'' do %>
      <div class="form-group clearfix vehicle-selector">
          <%= render 'refinery/ironman/fit_my_car/select_boxes' %>
          <div class="col-sm-offset-3 col-md-offset-0 col-sm-4 col-md-3 button">
            <button type="submit" class="btn btn-primary form-control go"><%= t('.save_and_view') %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<% test_error_var %>
<%= render "/refinery/content_page" %>
