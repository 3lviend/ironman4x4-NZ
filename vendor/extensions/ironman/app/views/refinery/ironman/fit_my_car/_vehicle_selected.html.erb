<% cache([vehicle_filter]) do %>
<% # note: if the vehicle_filter cookie returns an invalid vehicle id (perhaps it was deleted?), then the vehicle won't exist here %>
<% vehicle = Refinery::Ironman::Vehicle.find_by_id(vehicle_filter[:vehicle_series_id]) %>
<div id="vehicle-selected">
  <p class="clearfix">
    <%= raw t('.description', vehicle: (vehicle.present? ? vehicle.name_full : t('.unknown_vehicle'))) %>
    <%= link_to 'Back to Fit My 4x4', refinery.fit_my_4x4_path, class:'btn btn-info pull-right' %>
  </p>
</div>
<% end %>
