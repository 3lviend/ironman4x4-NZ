<% @layout_fit_my_car = 'below' %>

<% content_for :page_header do %>
  <%= @product.name %>
<% end %>

<% content_for :body do %>
<div class="clearfix">
  <div class="col-sm-7">
    <% if @product.images.size >= 1 %>
    <ul id="glasscase" class="gc-start">
    <% @product.images.each do |image| %>
    <li><%= image_tag(image.thumbnail(geometry: "560x360").url, alt:@product.name) %></li>
    <% end %>
    <ul>
    <% end %>
  </div>
  <div class="col-sm-5">
    <%= @product.price %>
    <%= @product.product_no %>
    <%= raw @product.short_description %>
  </div>
</div>

<div>
  <ul>
    <li>Description</li>
    <li>Specifications</li>
    <li>Fitting</li>
    <li>Warranty</li>
  </ul>
  <button class="btn btn-default view-all">View All</button>
  <button class="btn btn-default close-all">Close All</button>
</div>

<div class="">
  <h3>Description</h3>
  <%= raw @product.description %>
  <hr />
  <h3>Specifications</h3>
  <%= @product.notes %>
  <%= @product.quantity_required %>
  <%= @product.specifications %>
  <hr />
  <h3>Fitting</h3>
  <hr />
  <h3>Warranty</h3>
  <hr />
  <h3>Related Products</h3>
</div>
<% end %>

<%= render '/refinery/content_page' %>
