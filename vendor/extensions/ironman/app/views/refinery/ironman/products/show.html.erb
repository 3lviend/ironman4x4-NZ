<% @layout_fit_my_car = 'below' %>

<% content_for :page_header do %>
  <%= @product.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Product No</h1>
    <p>
      <%=raw @product.product_no %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @product.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @product.description %>
    </p>
  </section>
  <section>
    <h1>Notes</h1>
    <p>
      <%=raw @product.notes %>
    </p>
  </section>
  <section>
    <h1>Quantity Required</h1>
    <p>
      <%=raw @product.quantity_required %>
    </p>
  </section>
  <section>
    <h1>Product Attributes</h1>
    <p>
      <%=raw @product.product_attributes %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @product.price %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="products">
      <% @products.each do |product| %>
        <li>
          <%= link_to product.product_no, refinery.ironman_product_path(product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
