<% @products = @products.order('refinery_ironman_products.name').paginate(:page => params[:page], :per_page => 12) if not @products.is_a?(WillPaginate::Collection) %>
<ul id="page-product-list" class="clearfix infinite-container">
<% @products.each do |product| %>
  <%= render :partial => 'refinery/ironman/products/product', :locals => {product: product, style: :vehicle_bar_top} %>
<% end %>
</ul>
<%= will_paginate @products %>
