<% content_for :body_content_title do %>
  <%= @warehouse.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @warehouse.name %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @warehouse.address %>
    </p>
  </section>
  <section>
    <h1>Suburb</h1>
    <p>
      <%=raw @warehouse.suburb %>
    </p>
  </section>
  <section>
    <h1>Postcode</h1>
    <p>
      <%=raw @warehouse.postcode %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @warehouse.state %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @warehouse.country %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @warehouse.phone %>
    </p>
  </section>
  <section>
    <h1>Fax</h1>
    <p>
      <%=raw @warehouse.fax %>
    </p>
  </section>
  <section>
    <h1>Latitude</h1>
    <p>
      <%=raw @warehouse.latitude %>
    </p>
  </section>
  <section>
    <h1>Longitude</h1>
    <p>
      <%=raw @warehouse.longitude %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="warehouses">
      <% @warehouses.each do |warehouse| %>
        <li>
          <%= link_to warehouse.name, refinery.ironman_warehouse_path(warehouse) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
