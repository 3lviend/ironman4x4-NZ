<% content_for :body_content_title do %>
  <%= @order.order_no %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Order No</h1>
    <p>
      <%=raw @order.order_no %>
    </p>
  </section>
  <section>
    <h1>Stockist</h1>
    <p>
      <%=raw @order.stockist_id %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @order.name %>
    </p>
  </section>
  <section>
    <h1>Address1</h1>
    <p>
      <%=raw @order.address1 %>
    </p>
  </section>
  <section>
    <h1>Address2</h1>
    <p>
      <%=raw @order.address2 %>
    </p>
  </section>
  <section>
    <h1>Suburb</h1>
    <p>
      <%=raw @order.suburb %>
    </p>
  </section>
  <section>
    <h1>Postcode</h1>
    <p>
      <%=raw @order.postcode %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @order.state %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @order.country %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @order.email %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @order.phone %>
    </p>
  </section>
  <section>
    <h1>Enquiry Type</h1>
    <p>
      <%=raw @order.enquiry_type %>
    </p>
  </section>
  <section>
    <h1>Vehicle</h1>
    <p>
      <%=raw @order.vehicle_id %>
    </p>
  </section>
  <section>
    <h1>Comments</h1>
    <p>
      <%=raw @order.comments %>
    </p>
  </section>
  <section>
    <h1>Spam</h1>
    <p>
      <%=raw @order.spam %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="orders">
      <% @orders.each do |order| %>
        <li>
          <%= link_to order.order_no, refinery.ironman_order_path(order) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
