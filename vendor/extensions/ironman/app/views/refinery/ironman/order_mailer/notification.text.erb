<%=raw t('.greeting') %>,

<%=raw t('.you_recieved_new_order') %>

<%=raw t('.order_starts') %>

<%=raw t('.from') %>: <%= @order.name %>
<%=raw t('.address') %>: <%= @order.full_street_address %>
<%=raw t('.email') %>: <%= @order.email %>
<%=raw t('.phone') %>: <%= @order.phone %>
<%=raw t('.vehicle') %>: <%= @order.vehicle_name_full %>
<%=raw t('.comments') %>:
<%=raw strip_tags(@order.comments) %>

<% @order.lines.each do |line| %>
  <%= line.product.name %>
  <%= "qty:#{line.quantity}" %>
  <%= number_to_currency line.net_amount %>
<% end %>

<%=raw t('.order_ends') %>

<%=raw t('.closing_line') %>,
<%=raw Refinery::Core.site_name %>

<%=raw t('.ps') -%>
