<% content_for :body_content_title do %>
  <%= @catalogue.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @catalogue.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @catalogue.description %>
    </p>
  </section>
  <section>
    <h1>Priced Resource</h1>
    <p>
      <%=raw @catalogue.priced_resource_id %>
    </p>
  </section>
  <section>
    <h1>Unpriced Resource</h1>
    <p>
      <%=raw @catalogue.unpriced_resource_id %>
    </p>
  </section>
  <section>
    <h1>Products Link</h1>
    <p>
      <%=raw @catalogue.products_link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="catalogues">
      <% @catalogues.each do |catalogue| %>
        <li>
          <%= link_to catalogue.title, refinery.ironman_catalogue_path(catalogue) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
