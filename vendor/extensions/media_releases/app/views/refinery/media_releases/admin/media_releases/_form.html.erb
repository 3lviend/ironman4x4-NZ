<%= form_for [refinery, :media_releases_admin, @media_release] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @media_release,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :category -%>
    <%= f.text_field :category -%>
  </div>

  <div class='field'>
    <%= f.label :publication -%>
    <%= f.text_field :publication -%>
  </div>

  <div class='field'>
    <%= f.label :published_at -%>
    <%= f.date_select :published_at -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "media_releases/media_release" -%>
  </div>

  <div class='field'>
    <%= f.label :priced_resource_id -%>
    <%= f.number_field :priced_resource_id -%>
  </div>

  <div class='field'>
    <%= f.label :unpriced_resource_id -%>
    <%= f.number_field :unpriced_resource_id -%>
  </div>

  <div class='field'>
    <%= f.label :thumbnail_image_id -%>
    <%= f.number_field :thumbnail_image_id -%>
  </div>

  <div class='field'>
    <%= f.label :posted_at -%>
    <%= f.date_select :posted_at -%>
  </div>

  <div class='field'>
    <%= f.label :draft -%>
    <%= f.check_box :draft, :checked => @media_release[:draft] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.media_releases.admin.media_releases.media_release'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @media_release.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
