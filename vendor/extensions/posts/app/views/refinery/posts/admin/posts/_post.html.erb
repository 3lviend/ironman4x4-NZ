<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(post) -%>">
  <span class='title'>
    <%= post.published_at.strftime '%d/%m/%Y' %>
    -
    <% post_types = {
        Refinery::Posts::BlogPost.to_s => t('refinery.posts.admin.posts.form.post_types.blog_post'),
        Refinery::Posts::NewsItem.to_s => t('refinery.posts.admin.posts.form.post_types.news_item'),
        Refinery::Posts::Event.to_s => t('refinery.posts.admin.posts.form.post_types.event')
    } %>
    <%= post_types[post.type] %>
    -
    <%= post.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.posts_post_path(post),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_posts_admin_post_path(post),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.posts_admin_post_path(post),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => post.title)},
        :method => :delete %>
  </span>
</li>
