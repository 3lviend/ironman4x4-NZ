<%= form_for [refinery, :posts_admin, @post] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @post,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :type -%>
    <%= f.text_field :type -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:teaser, :body],
                :object => "posts/post" -%>
  </div>

  <div class='field'>
    <%= f.label :user_id -%>
    <%= f.number_field :user_id -%>
  </div>

  <div class='field'>
    <%= f.label :index_image_id -%>
    <%= f.number_field :index_image_id -%>
  </div>

  <div class='field'>
    <%= f.label :hero_image_id -%>
    <%= f.number_field :hero_image_id -%>
  </div>

  <div class='field'>
    <%= f.label :published_at -%>
    <%= f.datetime_select :published_at -%>
  </div>

  <div class='field'>
    <%= f.label :expire_at -%>
    <%= f.datetime_select :expire_at -%>
  </div>

  <div class='field'>
    <%= f.label :draft -%>
    <%= f.check_box :draft, :checked => @post[:draft] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.posts.admin.posts.post'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @post.type) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
