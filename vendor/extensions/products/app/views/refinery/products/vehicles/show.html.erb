<% content_for :body do %>
  <section>
    <h1>Parent</h1>
    <p>
      <%=raw @vehicle.parent_id %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @vehicle.name %>
    </p>
  </section>
  <section>
    <h1>Sort Order</h1>
    <p>
      <%=raw @vehicle.sort_order %>
    </p>
  </section>
  <section>
    <h1>Visible</h1>
    <p>
      <%=raw @vehicle.visible %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="vehicles">
      <% @vehicles.each do |vehicle| %>
        <li>
          <%= link_to vehicle.name, refinery.products_vehicle_path(vehicle) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
