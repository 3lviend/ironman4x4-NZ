<ul>
  <% if ::Refinery::Stockists::Admin::StockistsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.stockists_admin_stockists_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_stockists_admin_stockist_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Stockists::Admin::StockistsController.sortable? && ::Refinery::Stockists::Stockist.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Stockists"),
                 refinery.stockists_admin_stockists_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Stockists"),
                 refinery.stockists_admin_stockists_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
