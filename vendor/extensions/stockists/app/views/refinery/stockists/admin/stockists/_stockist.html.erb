<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(stockist) -%>">
  <span class='title'>
    <%= stockist.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.stockists_stockist_path(stockist),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_stockists_admin_stockist_path(stockist),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.stockists_admin_stockist_path(stockist),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => stockist.name)},
        :method => :delete %>
  </span>
</li>
