$(document).on 'page:load ready', ->
  $('#enquiry_type_vehicle_specific').on 'change', ->
    if $('#enquiry_type_vehicle_specific').is(':checked')
      $('#enquiry_type_general').prop 'checked', false

  $('#enquiry_type_general').on 'change', ->
    if $('#enquiry_type_general').is(':checked')
      $('#enquiry_type_vehicle_specific').prop 'checked', false

  $('#submit-enquiry form').on 'submit', (e) ->
    if not $('#terms_conditions').is(':checked')
      alert("<%= I18n.t('refinery.ironman.enquiries.new.terms_conditions.warning') %>")
      e.preventDefault()
