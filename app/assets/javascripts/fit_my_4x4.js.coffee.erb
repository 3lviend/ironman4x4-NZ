$(document).on 'page:load ready', ->
  cookieOptions = {expires:7, path: '/'}

  $('#fit-my-4x4, #layout-fit-my-4x4').on 'submit', (event) ->
    event.preventDefault()

    data = {
      vehicle_make_id: Number $('#vehicle_1st_id').val()
      vehicle_model_id: Number $('#vehicle_2nd_id').val()
      vehicle_series_id: Number $('#vehicle_3rd_id').val()
    }

    if data.vehicle_make_id is 0 or data.vehicle_model_id is 0 or data.vehicle_series_id is 0
      alert('<%= I18n.t('layouts.fit_my_4x4.warning') %>')
      return

    $.cookie 'fit_my_4x4', JSON.stringify(data), cookieOptions
    document.location.href = $('form', this).attr 'action'

  $('#vehicle-filter-enabled button.disable').on 'click', (event) ->
    $.removeCookie 'fit_my_4x4', cookieOptions
    document.location.reload()
