<% unless @products.blank? %>
  <% @products.each do |p| %>
    <div class="radio">
      <label for="<%= p.quantity_required %>_<%= p.product_no %>_<%= p.id %>">
        <input class="shocks" type="radio" name="rear_shocks" id="<%= p.quantity_required %>_<%= p.product_no %>_<%= p.id %>" value="<%= p.product_no %>">&nbsp; &nbsp;<%= p.name.split(" - ")[1].upcase %><br/>
      </label>
      <p class="short_notes"> <%= p.short_description %></p>         
    </div>      
  <% end %>
   <div class="reset">
    <label for="reset_rear_shocks"><input id="reset_rear_shocks" name="reset_rear_shocks" type="checkbox"/>&nbsp; &nbsp;Clear Data
    </label>
   </div>         
<% else %>
  <div class="radio">
    <h2>No Matching Rear Shocks Available</h2>    
  </div>
<% end %>


