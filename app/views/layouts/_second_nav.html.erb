  <div id="layout-second-nav">
    <div class="container">
      <%= link_to refinery.root_path do %>
      <div class="logo">
        <h1><%= t('.logo.title') %></h1>
      </div>
      <% end %>

      <div class="clearfix">
        <ul class="sections">
          <li>
            <%= link_to refinery.ironman_products_path do %>
              <%= t('.nav.products') %>
            <% end %>
          </li>
          <li>
            <%= link_to refinery.root_path do %>
              <%= t('.nav.fitmycar') %>
            <% end %>
          </li>
          <%
            begin
              tech_support_page = ::Refinery::Page.friendly.find('technical-support')
            rescue ActiveRecord::RecordNotFound
              tech_support_page = nil
            end
          %>
          <% if tech_support_page.present? %>
          <li>
            <%= link_to refinery.marketable_page_path(tech_support_page) do %>
              <%= t('.nav.technical') %>
            <% end %>
          </li>
          <% end %>
          <li>
            <%= link_to refinery.root_path do %>
              <%= t('.nav.wish_list') %>
            <% end %>
          </li>
          <li>
            <%= link_to refinery.ironman_stockists_path do %>
              <%= t('.nav.stockists') %>
            <% end %>
          </li>
        </ul>

        <%= form_tag refinery.search_path, class: 'postcode-search navbar-form navbar-right navbar-input-group', role:'search' do -%>
          <div class="form-group">
            <%= text_field_tag :query, {}, {:class => 'form-control',
              :type => 'search', :placeholder => t('.search_form.placeholder'),
              :value => (params[:query] if params[:query])} %>
          </div>
          <%= button_tag type:'submit', class:'btn btn-default' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
