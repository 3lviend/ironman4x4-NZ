<div id="layout-social">
  <div class="container">
    <ul class="icons">
      <li class="icon facebook">
        <%= link_to 'https://www.facebook.com/Ironman4x4au', :target => '_blank' do %>
          <%= image_tag('icon_social_facebook.png') %>
        <% end %>
      </li><!--
      --><li class="icon instagram">
        <%= link_to 'http://instagram.com/ironman4x4', :target => '_blank' do %>
          <%= image_tag('icon_social_instagram.png') %>
        <% end %>
      </li><!--
      --><li class="icon twitter">
        <%= link_to 'https://twitter.com/ironman4x4au', :target => '_blank' do %>
          <%= image_tag('icon_social_twitter.png') %>
        <% end %>
      </li><!--
      --><li class="icon youtube">
        <%= link_to 'https://www.youtube.com/user/ironman4x4au', :target => '_blank' do %>
          <%= image_tag('icon_social_youtube.png') %>
        <% end %>
      </li>
    </ul>

    <%= form_tag(refinery.newsletter_subscribe_path, method: 'post', id: 'newsletter-subscribe', class:'form-search') do -%>
      <div class="description"><%= t('.newsletter.description') %></div>
      <div class="form-group">
        <div class="input-group">
           <%= email_field(:email, :address, {id: 'email', placeholder: t('.newsletter.placeholder'), class: 'form-control'}) %>
          <span class="input-group-btn">
            <%= submit_tag t('.newsletter.go'), class:'btn btn-search selector go' %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
