          <input type="text" class="form-control" placeholder="<%= t('.newsletter.placeholder') %>" />
          <span class="input-group-btn">
            <button type="submit" class="btn btn-search selector go"><%= t('.newsletter.go') %></button>
          </span>
        </div>
      </div>
    </form>
  </div>
